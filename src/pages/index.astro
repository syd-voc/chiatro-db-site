---
import type { Quiz } from "../types/quiz";
// import.meta.glob を eager で使い、ビルド時に JSON モジュールを同期取得する
const modules = import.meta.glob("../../data/quizzes/quiz_*.json", {
	eager: true,
}) as Record<string, { default: Quiz }>;
const quizzes: Quiz[] = Object.values(modules).map((m) => m.default);
---

<html lang="ja">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
		<h1>イントロクイズ（試作）</h1>
		<ul>
			{
				quizzes.map((quiz) => (
					<li>
						<a href={`/quizzes/${quiz.quizId}`}>
							第{quiz.quizId}回（{quiz.date}）
						</a>
					</li>
				))
			}
		</ul>
	</body>
</html>
